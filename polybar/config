[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = "Session"
label-open-foreground = ${colors.secondary}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = i3-nagbar -t warning -b "Reboot system" "sudo reboot" -m "Do you want to reboot the system?" 
menu-0-1 = power off
menu-0-1-exec = i3-nagbar -t warning -b "Shutdown" "sudo poweroff"  -m "Do you want to poweroff the system?" 


#menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec =i3-nagbar -t warning -b "Reboot system" -m "Do you really want to reboot?" "sudo reboot"

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

